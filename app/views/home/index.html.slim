        = render "program", time: "10:45", description: "Break", icon: "coffee"
        = render "talk"   , time: "11:15", speaker: Speaker.find(:bovensiepen)
        = render "talk"   , time: "11:45", speaker: Speaker.find(:junqitan)
        = render "program", time: "12:15", description: "Lunch", icon: "cultery"
        = render "talk"   , time: "13:45", speaker: Speaker.find(:betsyhaibel)
        = render "talk"   , time: "14:30", speaker: Speaker.find(:laurent)
        = render "talk"   , time: "15:00", speaker: Speaker.find(:juanitofatas)
        = render "program", time: "15:30", description: "Break", icon: "coffee"
        = render "talk"   , time: "16:00", speaker: Speaker.find(:florian)
        = render "talk"   , time: "16:30", speaker: Speaker.find(:apotonick)
        = render "program", time: "17:15", description: "Closing For Day One", icon: "bell"
