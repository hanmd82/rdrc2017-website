        = render "program", time: "12:15", description: "Lunch", icon: "cultery"
        = render "talk"   , time: "13:45", speaker: Speaker.find(:amatsuda)
        = render "talk"   , time: "14:30", speaker: Speaker.find(:weiqingtoh)
        = render "talk"   , time: "15:00", speaker: Speaker.find(:antondavydov)
        = render "program", time: "15:30", description: "Break", icon: "coffee"
        tr.program
          td.program--time.time 16:00
          td
          td
            .program--details
              p
                ' (to be confirmed)

        = render "talk"   , time: "16:30", speaker: Speaker.find(:tenderlove)
        = render "program", time: "17:15", description: "Closing Address", icon: "bell"
        tr.program
          td.program--time.time 19:00
          td
          td
            .program--description
              = icon("beer", class: "fa")
              ' After Party
            .program--details
              p
                ' There will be finger food and free-flow beer!

